<Window x:Class="XBOXACHOVERLAY.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Achievement Overlay" Height="150" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">
    <Border Background="#AA000000" CornerRadius="10" Padding="10">
        <StackPanel>
            <TextBlock x:Name="GameTitle" FontSize="16" Foreground="White"/>
            <TextBlock x:Name="AchievementName" FontSize="20" FontWeight="Bold" Foreground="Gold"/>
            <Button Content="Trigger Test Achievement"
                    Click="TriggerButton_Click"
                    Width="200" Height="40"/>
        </StackPanel>
    </Border>
</Window>
